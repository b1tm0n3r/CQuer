@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}
<div id="login-row" class="row justify-content-center align-items-center">
    <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
            <form asp-controller="Account" asp-action="Login" method="post" class="form">
                <input type="hidden" asp-for="RedirectUrl">
                <h1 class="text-center">Login</h1>
                <p class="text-secondary"> Enter your login and password!</p>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="LoginDto.Username" placeholder="Username" required="required">
                    <span asp-validation-for="LoginDto.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="LoginDto.Password" placeholder="Password" required="required">
                    <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
                </div>
                <input type="submit" name="" value="Login" href="#">
            </form>
        </div>
        <div class="text-center mt-3"> Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a></div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
